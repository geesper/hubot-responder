<% include header %>

<form action="/configuration" method="post">
<div class="form-group row">
  <label for="whitelist_rooms" class="col-xs-2 col-form-label">Room whitelist (comma delimited), * for all</label>
  <div class="col-xs-10">
    <input type="text" class="form-control" id="whitelist_rooms" name="whitelist_rooms" value="<%= rooms.whitelist.join(",") %>" required>
  </div>
</div>
<div class="form-group row">
  <label for="blacklist_rooms" class="col-xs-2 col-form-label">Room blacklist (comma delimited), * for all</label>
  <div class="col-xs-10">
    <input type="text" class="form-control" id="blacklist_rooms" name="blacklist_rooms" value="<%= rooms.blacklist.join(",") %>">
  </div>
</div>
<div class="form-group row">
<button type="submit" class="btn btn-primary">Save</button>
<a href="./list" class="btn btn-default" role="button">Cancel</a>
</div>
</form>

<% include footer %>
